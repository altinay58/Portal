@{
    ViewBag.Title = "Log in";
}
@using System.Web.Helpers
@using System.Web.Mvc
@using System.Web.Mvc.Html
@using Portal.Controllers
@using Portal.Models
@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="author" content="Karayel Tasarım" />
    <meta name="application-name" content="Discus 2015" />
    <base href="/Content/yonetim/" />
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Force IE9 to render in normla mode -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Le styles -->
    <link href="css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="css/bootstrap/bootstrap-responsive.css" rel="stylesheet" />
    <link href="css/supr-theme/jquery.ui.supr.css" rel="stylesheet" type="text/css" />
    <link href="css/icons.css" rel="stylesheet" type="text/css" />
    <link href="plugins/forms/uniform/uniform.default.css" type="text/css" rel="stylesheet" />

    <!-- Main stylesheets -->
    <link href="css/main.css" rel="stylesheet" type="text/css" />

    <!--[if IE 8]><link href="css/ie8.css" rel="stylesheet" type="text/css" /><![endif]-->
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script type="text/javascript" src="js/libs/excanvas.min.js"></script>
      <script type="text/javascript" src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <script type="text/javascript" src="js/libs/respond.min.js"></script>
    <![endif]-->
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="images/favicon.ico" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/apple-touch-icon-144-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/apple-touch-icon-114-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/apple-touch-icon-72-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" href="images/apple-touch-icon-57-precomposed.png" />

    <script type="text/javascript" src="js/libs/modernizr.js"></script>

</head>

<body class="loginPage">

    <div class="container">

        <div id="header">

            <div class="row">

                <div class="navbar">
                    <div class="container">
                        <a class="navbar-brand" href="http://www.karayeltasarim.com" target="_blank">Karayel Tasarım</a>
                    </div>
                </div><!-- /navbar -->

            </div><!-- End .row -->

        </div><!-- End #header -->

    </div><!-- End .container -->

    <div class="container">

        <div class="loginContainer" id="loginForm">

            <form id="reset_password_form" method="post" action="@Url.Action("SifremiUnuttum", "Account")" class="booking">
                @if (ViewBag.Durum == "post")
                {
                    <div class="form-group">
                        <label class="col-lg-12 control-label" for="Email">Şifre sıfırlama maili gönderildi.<br />Mail adresini kontrol edin ve mailde gönderilen adımları izleyin.</label>

                    </div>

                }
                else
                {
                    <div class="form-group">
                        <label class="col-lg-12 control-label" for="Email">Şifre sıfırlama formu : </label>
                        <div class="col-lg-12">
                            <input id="Email" type="text" name="Email" class="form-control" value="Email" placeholder="EMail adresinizi girin ...">
                            <span class="icon16 icomoon-icon-user right gray marginR10"></span>
                        </div>
                    </div><!-- End .form-group  -->
                    <div class="form-group">
                        <div class="col-lg-12 clearfix ">
                            <button type="submit" class="btn btn-info " id="loginBtn"><span class="icon16 icomoon-icon-enter white"></span> Şifre Sıfırla</button>
                        </div>
                    </div>
                }


            </form>
        </div>

    </div><!-- End .container -->
    <!-- Le javascript
    ================================================== -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="js/bootstrap/bootstrap.js"></script>


</body>
</html>