    <div class="portlet-body flip-scroll" style="margin-top:15px">
        <table class="table table-bordered table-striped table-condensed flip-content">
            <thead class="flip-content">
                <tr>
                    <th> Id </th>
                    <th> Ad Soyad </th>
                    <th> Firma Adı </th>
                    <th> Telefon </th>
                    <th> Cep Telefon</th>
                    <th> Görüşme Notu </th>
                    <th> Mail Durumu </th>
                    <th> Ticket </th>
                    <th> Tarih </th>
                    <th> Kayıt Durumu </th>
