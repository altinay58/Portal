@model Portal.Models.Arayanlar
@using Portal.Models;
@{
    ViewBag.Title = "ArayanDuzenle";
}
<form class="form-horizontal" id="arayanEkle" name="arayanEkle" method="post" action="/Arayanlar/ArayanDuzenle/@Model.arayanID">
    @Html.AntiForgeryToken()
    <input type="hidden" name="oncekiSayfa" value="@ViewBag.oncekiSayfa" />
    @Html.HiddenFor(x=>x.arayanID)
    <div style="margin:0 auto;width:95%">
        <div class="form-body">
            <div class="form-group">

                <label class="control-label col-md-2">Firma Adı</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.arayanFirmaAdi, new { @class = "form-control",id= "arayanFirmaAdi" })
                    @*@Html.HiddenFor(x=>x.arayanKayitliRefFirmaID)*@
                    <input type="hidden" name="arayanKayitliRefFirmaID" id="arayanKayitliRefFirmaID" value="@Model.arayanKayitliRefFirmaID" />
                    <input type="hidden" name="Kayitlimi" />
                </div>
                <label class="control-label col-md-2">Adı</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.arayanAdi, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">

                <label class="control-label col-md-2">Soyadı</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.arayanSoyadi, new { @class = "form-control" })

                </div>
                <label class="control-label col-md-2">Firma Sahibi Özellik</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.arayanFirmaSahibiOzelligi, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Aracı Varmı</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.ArayanAraciAdi, new { @class = "form-control" })                   
                </div>
                <label class="control-label col-md-2">Telefon No</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(x => x.arayanTelefonNo, new { @class = "form-control phone_us" })         
                 
                </div>


            </div>
            <div class="form-group">

                <label class="control-label col-md-2">Cep Tel No</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.arayanCepTelNo, new { @class = "form-control phone_us" })
                </div>
                <label class="control-label col-md-2">Mail Adresi</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.arayanMailAdresi, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Web Adresi</label>
                <div class="col-md-4">
                    @Html.TextAreaFor(x => x.arayanWebAdresi, new { @class = "form-control" })
                </div>
                <label class="control-label col-md-2">Tam Adresi</label>
                <div class="col-md-4">
                    @Html.TextAreaFor(x => x.arayanAdres, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Şehir</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.arayanSehir, new { @class = "form-control" })
                </div>
                <label class="control-label col-md-2">İlçe</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.arayanilce, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Bölge Adı</label>
                <div class="col-md-4">
                    <select name="arayanRefKonumID" class="form-control select2">
                        @foreach (Konum item in ViewBag.arayanRefKonumID)
                        {
                            if (item.KonumID == Model.arayanRefKonumID)
                            {
                                <option value="@item.KonumID" selected="selected">@item.Konum1</option>
                            }
                            else
                            {
                                <option value="@item.KonumID">@item.Konum1</option>
                            }
                        }
                    </select>
               
                </div>
                <label class="control-label col-md-2">Konu</label>
                <div class="col-md-4">
                    @Html.TextAreaFor(x => x.arayanKonu, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Tarih</label>
                <div class="col-md-4">


                    <div class="input-group  date date-picker" data-date-format="dd.MM.yyyy">
                        <input type="text" is-date="1" class="form-control" name="arayanKayitTarih" id="Tarih" value="@Model.arayanKayitTarih.Value.ToString("dd.MM.yyyy HH:mm")" data-date-format="dd.mm.yyyy">
                        <span class="input-group-btn">
                            <button class="btn default" type="button">
                                <i class="fa fa-calendar"></i>
                            </button>

                        </span>
                        <div class="input-group">
                            <input type="text" name="SaatDakika" value="@Model.arayanKayitTarih.Value.ToString("HH:mm")" class="form-control timepicker timepicker-24" style="width:50px;padding:2px">
                            <span class="input-group-btn">
                                <button class="btn default" type="button">
                                    <i class="fa fa-clock-o"></i>
                                </button>
                            </span>
                        </div>

                    </div>
                </div>
                <label class="control-label col-md-2">Proje Tipi</label>
                <div class="col-md-3">
                    <select name="arayanDomainKategoriID" class="form-control select2">
                        @foreach (DomainKategori item in ViewBag.arayanDomainKategoriID)
                        {
                            if (item.DomainKategoriID == Model.arayanDomainKategoriID)
                            {
                                <option value="@item.DomainKategoriID" selected="selected">@item.DomainKategoriAdi</option>
                            }
                            else
                            {
                                <option value="@item.DomainKategoriID">@item.DomainKategoriAdi</option>
                            }
                        }
                    </select>
                  
                </div>


            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Sektör Adı</label>
                <div class="col-md-4">
                    <select name="arayanSektorID" class="form-control select2">
                        @foreach (Sektorler item in ViewBag.arayanSektorID)
                        {
                            if (item.sektorID == Model.arayanSektorID)
                            {
                                <option value="@item.sektorID" selected="selected">@item.sektorAdi</option>
                            }
                            else
                            {
                                <option value="@item.sektorID">@item.sektorAdi</option>
                            }
                        }
                    </select>
                  
                </div>
                <label class="control-label col-md-2">Mail Şabşonları</label>
                <div class="col-md-4">
                    <select name="arayanMailSablonuId" class="form-control select2">
                        @foreach (MailSablonu item in ViewBag.mailSablonlari)
                        {
                            if (item.MailSablonuID == Model.arayanMailSablonuId)
                            {
                                <option value="@item.MailSablonuID" selected="selected">@item.MailSablonuAdi</option>
                            }
                            else
                            {
                                <option value="@item.MailSablonuID">@item.MailSablonuAdi</option>
                            }
                        }
                    </select>
                 
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Not</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(x => x.arayanNot, new { @class = "ckeditor form-control" })
                </div>
                @*<label class="control-label col-md-2">Beğenilen Web Siteleri</label>
                    <div class="col-md-4">
                        @Html.TextAreaFor(x => x.arayanBegendigiWebSiteleri, new { @class = "form-control" })
                    </div>*@
            </div>
            
          

            <div class="form-group">
                <label class="col-md-offset-2 col-md-2">
                    <button type="submit" class="btn green">Kaydet</button>
                </label>

            </div>


        </div>
    </div>
</form>

