@{
    ViewBag.Title = "TanitimMaili";
    string mesaj = ViewBag.MailSablonu;
}


<form action="@Url.Action("TanitimMaili", "MailSablonlari")" class="form-horizontal" method="post">


    <div class="form-body">
        <h4>Tanitim Maili</h4>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2">Mail</label>
            <div class="col-md-4">
                <input id="mail" name="mail" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Başlık</label>
            <div class="col-md-4">
                <input id="baslik" name="baslik" type="text" class="form-control" />
                <input id="sablon" name="sablon" type="hidden"  value="@ViewBag.Sablon" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Mesaj</label>
            <div class="col-md-10">
                <textarea class="ckeditor" id="mesaj" name="mesaj" type="text">@MvcHtmlString.Create(mesaj)</textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gönder" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
@section scripts{
<script src="/Content/assets/global/plugins/ckeditor/ckeditor.js" type="text/javascript"></script>
}